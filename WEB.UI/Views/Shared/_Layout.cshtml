<!DOCTYPE html>
<html>
<head>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - BELL HELP DESK</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="search-background">
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary border-bottom box-shadow mb-3">
        <div class="container">
            <div class="navbar-brand text-white">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("BELL HELP DESK", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Accueil", "Index", "Home")</li>
                    <li>@Html.ActionLink("Rapport", "Report", "Home")</li>
                    <li>@Html.ActionLink("Recherche", "Liste", "Ticket")</li>
                    <li>@Html.ActionLink("Demande", "Edit", "Ticket")</li>
                </ul>
            </div>
    </div>
    </nav>
    </header>
<div class="container">
    <main role="main" class="pb-3">
    @RenderBody()
    </main>
</div>
<footer class="border-top footer text-white bg-primary">
    <div class="container">
        &copy; @DateTime.Now.Year  MARHOUM RABI 
    </div>
</footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/gridmvc")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>
